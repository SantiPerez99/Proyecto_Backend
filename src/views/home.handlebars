
<div>
    <h1>PROYECTO BACKEND</h1>
    <hr>
    <br>
    <h3>LISTA DE PRODUCTOS</h3>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Código</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Status</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>
                    {{#if this.status}}
                    activo
                    {{else}}
                    desactivo
                    {{/if}}                
                </td>
                <td>
                    {{#if this.thumbnails.lenght}}
                    <a href="{{this.thumbnails.[0]}}"target="_blank">{{this.thumbnails.[0]}}</a>
                    {{else}}
                    No hay imagen     
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>